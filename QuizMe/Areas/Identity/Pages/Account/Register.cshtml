@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="row">
    <div class="col-5 offset-4 border border-primary" style="border-radius:10px; padding: 15px;">
        <h1>@ViewData["Title"]</h1>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Username"></label>
                <input asp-for="Input.Username" class="form-control" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.MobilePhone"></label>
                <input asp-for="Input.MobilePhone" class="form-control" />
                <span asp-validation-for="Input.MobilePhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <label class="form-check-label" asp-for="Input.SelectedRole">Student</label>
                    <input type="radio" asp-for="Input.SelectedRole" value="Student" checked class="form-control" />
                </div>
                <div class="form-check">
                    <label class="form-check-label" asp-for="Input.SelectedRole">Teacher</label>
                    <input type="radio" asp-for="Input.SelectedRole" value="Teacher" class="form-control" />
                    
                </div>
                
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
        <span>Already have an account? Login <a class="text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">here</a></span>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
